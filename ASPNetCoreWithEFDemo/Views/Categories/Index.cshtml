@model IEnumerable<ASPNetCoreWithEFDemo.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Categories</h2>
            <p class="text-muted">Manage book categories</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Category
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td><strong>@category.Name</strong></td>
                                    <td>@category.Description</td>
                                    <td>
                                        <a asp-controller="Books" asp-action="Search" asp-route-categoryName="@category.Name" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-search"></i> View Books
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No categories found. <a asp-action="Create">Add the first category</a>
                </div>
            }
        </div>
    </div>
</div>